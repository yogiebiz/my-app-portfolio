<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android. com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <TextView android:id="@+id/textview_title" android:text="@string/title" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textview_title"
            >
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F08C35"
                android:text="@string/spotify_streamer"
                android:tag="@string/spotify_streamer"
                android:onClick="appButtonOnClick"
                />
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F08C35"
                android:text="@string/scores_app"
                android:tag="@string/scores_app"
                android:onClick="appButtonOnClick"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F08C35"
                android:text="@string/library_app"
                android:tag="@string/library_app"
                android:onClick="appButtonOnClick"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F08C35"
                android:text="@string/build_it_bigger"
                android:tag="@string/build_it_bigger"
                android:onClick="appButtonOnClick"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F08C35"
                android:text="@string/xyz_reader"
                android:tag="@string/xyz_reader"
                android:onClick="appButtonOnClick"/>
            <Button
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_button"
                android:background="#F44336"
                android:text="@string/capstone"
                android:tag="@string/capstone"
                android:onClick="appButtonOnClick"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
